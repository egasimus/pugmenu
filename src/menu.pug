    Run(label="Restart Tor").
      gksudo 'systemctl restart tor'
    Run(label="Restart VPN").
      gksudo 'systemctl restart mullvad-daemon'
    Run(label="Rescan wireless networks").
      gksudo 'iw dev wlp3s0 scan'

  Menu(label="Printing")
